# Required
FUNPAY_GOLDEN_KEY=

# Optional tuning
HOURS_FOR_REVIEW=1
AUTO_EXTEND_ENABLED=true
MAX_EXTENSION_HOURS=24
RENTAL_CHECK_INTERVAL=60
FUNPAY_LOT_RANK_PREFIX=1

# Steam (optional)
AUTO_STEAM_DEAUTHORIZE_ON_EXPIRE=true

# Encrypt sensitive fields at rest (Fernet key, base64-encoded)
DATA_ENCRYPTION_KEY=

# Steam presence bot (optional, required for "in match" detection via rich presence)
STEAM_PRESENCE_ENABLED=false
STEAM_PRESENCE_LOGIN=
STEAM_PRESENCE_PASSWORD=
STEAM_PRESENCE_SHARED_SECRET=
STEAM_PRESENCE_IDENTITY_SECRET=
STEAM_PRESENCE_REFRESH_TOKEN=

# Steam bridge (multi-user presence bridge)
STEAM_BRIDGE_URL=
STEAM_BRIDGE_INTERNAL_TOKEN=
# Optional override for encrypting bridge credentials (falls back to DATA_ENCRYPTION_KEY)
STEAM_BRIDGE_CRYPT_KEY=

# Dota 2 match handling (requires STEAM_PRESENCE_ENABLED=true)
DOTA_MATCH_BLOCK_MANUAL_DEAUTHORIZE=true
DOTA_MATCH_DELAY_EXPIRE=true
DOTA_MATCH_GRACE_MINUTES=90

# MySQL (required)
MYSQLHOST=
MYSQLPORT=3306
MYSQLUSER=
MYSQLPASSWORD=
MYSQLDATABASE=

# Safety
REQUIRE_PAID_ORDER=true

# Redis (required in production for cache/session)
REDIS_URL=

# Runtime environment
APP_ENV=development
